<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Page1">

    <ContentPage.Resources>
        <Style TargetType="View" x:Key="base1">
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
        </Style>
        <Style TargetType="Label" BasedOn="{StaticResource base1}">
            <Setter Property="BackgroundColor" Value="Red"/>
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource base1}">
            <Setter Property="BackgroundColor" Value="Blue"/>
        </Style>
        
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Mi primer texto" Style="{StaticResource base1}"></Label>
            <Button Text="Prueba" Style="{StaticResource base1}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>